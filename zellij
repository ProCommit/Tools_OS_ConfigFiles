theme "tokyo-night"
default_layout "compact"
on_force_close "quit"

default_mode "locked"

keybinds clear-defaults=true {

    locked {
        bind "Ctrl g" { SwitchToMode "pane"; }
    }

    pane {
        bind "Alt Left"  { MoveFocus "left"; }
        bind "Alt Right" { MoveFocus "right"; }
        bind "Alt Up"    { MoveFocus "up"; }
        bind "Alt Down"  { MoveFocus "down"; }

        bind "Alt Enter" { NewPane "down";  SwitchToMode "pane"; }
        bind "Alt \\"    { NewPane "right"; SwitchToMode "pane"; }
        bind "Alt q"     { CloseFocus;      SwitchToMode "pane"; }
        bind "Alt t"     { NewTab;          SwitchToMode "pane"; }

        bind "Tab" { ToggleTab; }

        bind "Ctrl g" { SwitchToMode "locked"; }
    }

    tab {
        bind "Left"  { GoToPreviousTab; }
        bind "Right" { GoToNextTab; }
        bind "Tab"   { ToggleTab; }
        bind "Ctrl g" { SwitchToMode "pane"; }
    }
}










theme "dracula"
default_layout "compact"
on_force_close "quit"
default_mode "locked"

keybinds clear-defaults=true {
    shared_among "normal" "locked" "pane" "tab" "scroll" "resize" "move" {
        bind "Alt Left"  { MoveFocus "left"; }
        bind "Alt Right" { MoveFocus "right"; }
        bind "Alt Up"    { MoveFocus "up"; }
        bind "Alt Down"  { MoveFocus "down"; }

        bind "Alt Enter" { NewPane "down";  SwitchToMode "locked"; }
        bind "Alt \\"    { NewPane "right"; SwitchToMode "locked"; }

        bind "Alt q" { CloseFocus; SwitchToMode "locked"; }

        bind "Alt t" { NewTab; }

        bind "Alt Tab"       { GoToNextTab; }
        bind "Alt Shift Tab" { GoToPreviousTab; }
    }

    shared_except "locked" {
        bind "Esc" { SwitchToMode "locked"; }
    }
}


if command -v zellij >/dev/null 2>&1; then
    [[ "$ZELLIJ" != "0" ]] && exec zellij
f
